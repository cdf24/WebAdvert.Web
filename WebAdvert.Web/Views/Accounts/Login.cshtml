
@{
    ViewData["Title"] = "Login";
}

@model WebAdvert.Web.Models.Accounts.LoginModel;

<div class="row">
    <div class="cold-md-4">
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <h4>Login using your email address and password</h4>
            <h5>
                <a asp-controller="Accounts" asp-action="Signup">
                    If you are not a member you can sign up here
                </a>
            </h5>
            <hr />

            <div asp-validation-summary="All" class="text-danger"> </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="tex-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="tex-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    @Html.DisplayName("Remember Me")
                </div>
            </div>

            <button type="submit">Login</button>
        </form>
    </div>
</div>

